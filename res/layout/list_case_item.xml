<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/common_padding" >

    <TextView
        android:id="@+id/tvId"
        style="@style/id_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvUnreadNotification"
        style="@style/notification_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvId"
        android:paddingBottom="@dimen/double_common_padding"
        android:paddingLeft="@dimen/double_common_padding"
        android:paddingRight="@dimen/double_common_padding"
        android:paddingTop="@dimen/common_padding" >

        <TextView
            android:id="@+id/tvMessage"
            style="@style/list_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvName"
            style="@style/list_item_sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvMessage" />

        <TextView
            android:id="@+id/tvCreatedAt"
            style="@style/list_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tvName" />
    </RelativeLayout>

</RelativeLayout>