<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="main_list">
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:background">@color/main_bg</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:listSelector">@drawable/patientrx_list_selector_holo_light</item>
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:divider">@color/divider_color</item>
    </style>

    <style name="title">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/secondary_font_color</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/title_bg</item>
    </style>

    <style name="id_tag">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/patientrx_color</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@color/main_color</item>
        <item name="android:paddingLeft">@dimen/double_common_padding</item>
        <item name="android:paddingRight">@dimen/common_padding</item>
    </style>

    <style name="notification_count">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@color/patientrx_color</item>
        <item name="android:paddingLeft">@dimen/common_padding</item>
        <item name="android:paddingRight">@dimen/common_padding</item>
    </style>

    <style name="list_item_title">
        <item name="android:textAppearance">?android:attr/textAppearanceListItem</item>
        <item name="android:textColor">@color/primary_font_color</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="list_item_sub_title">
        <item name="android:textAppearance">?android:attr/textAppearanceListItemSmall</item>
        <item name="android:textColor">@color/primary_font_color</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="list_time">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/secondary_font_color</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="text_with_main_color">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColorHint">@color/main_hint_color</item>
    </style>

    <style name="text_large" parent="@style/text_with_main_color">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="text_small">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_small_time" parent="@style/list_time">
        <item name="android:textColor">@color/main_hint_color</item>
    </style>

    <style name="text_name" parent="@style/text_large">
        <item name="android:inputType">textPersonName</item>
    </style>

    <style name="chat_list">
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:background">@color/main_bg</item>
    </style>

    <style name="chat_message_right">
        <item name="android:textAppearance">?android:attr/textAppearanceListItemSmall</item>
        <item name="android:textColor">@color/patientrx_color</item>
    </style>

</resources>